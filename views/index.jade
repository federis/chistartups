doctype html
html
  head
    meta(charset="utf-8")
    title CHITweets - Real-Time Chicago Tweets Map
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600', type='text/css')
    link(rel='stylesheet', href='/style/app.css')
    script(src="http://code.jquery.com/jquery-1.10.1.min.js")
    script(src="components/socket.io-client/socket.io.js")
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB57SQEIyABGvSVF_gE9uCny9J3XG0vgk0&sensor=false")
    script.
      function initialize() {
        var mapOptions = {
          center: new google.maps.LatLng(41.8883695, -87.6353645),
          minZoom: 13,
          maxZoom: 16,
          zoom: 15,
          mapTypeControl: false,
          zoomControl: false,
          panControl: false, 
          streetViewControl: false,
          styles: [
            {
              "featureType": "water",
              "elementType": "all",
              "stylers": [
                {
                  "hue": "#b3ddf2"
                }, {
                  "visibility": "on"
                }
              ]
            }, {
              "featureType": "landscape",
              "stylers": [
                {
                  "color": "#f2f2f2"
                }
              ]
            }, {
              "featureType": "road",
              "stylers": [
                {
                  "saturation": -100
                }, {
                  "lightness": 45
                }
              ]
            }, {
              "featureType": "poi",
              "stylers": [
                {
                  "visibility": "off"
                }
              ]
            }
          ]
        }
        window.map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions)
      }
      google.maps.event.addDomListener(window, 'load', initialize)
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-55801500-1', 'auto');
      ga('send', 'pageview');
    script(src="/script/app.js")
  body
    div(style="width: 100%; height: 100%; overflow: hidden;")
      #alert
      #map
        #map-canvas
        footer
          div#bic
            img(src="/img/bic.png")
            span Built in Chicago 
          div#by by 
          div#logo
            a(href="http://www.flyoverworks.com", target="_blank")
              img(src="/img/logo.png", alt="FlyoverWorks")
          div#add-btn Add your company<br/>to the map
      #tweets
      #mask
      #add-account-form
        div.close
          img(src="https://maps.gstatic.com/mapfiles/api-3/images/mapcnt3.png", draggable="false", style="position: absolute; left: -2px; top: -336px; width: 59px; height: 492px; -webkit-user-select: none; border: 0px; padding: 0px; margin: 0px;")
        div
          form#contact(method="post", action="contact")
            h3 Would you like to have your startup's tweets appear on this map?
            p Please fill in the information below to get added:
            div
              label Your Name
              input(type="text", name="name")
            div
              label Your Email
              input(type="email", name="email")
            div
              label Company Name
              input(type="text", name="company")
            div
              label Twitter Handle
              input(type="text", name="twitter")
            div
              label Office Address
              input(type="text", name="address")
            div
              button#submit Submit
